<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_line_btn"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="77dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_line_btn"
            android:gravity="center"
            android:padding="5dp"
            android:text="함께돌봄"
            android:textColor="@color/color_primary_900"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_status"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:background="@drawable/rounded_line_btn"
            android:gravity="center"
            android:text="모집 진행중"
            android:textColor="@color/color_primary_900" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:gravity="left"
        android:fontFamily="@font/font_bold"
        android:maxLines="1"
        android:textColor="@color/color_primary_800"
        android:text="유치원 등원 품앗이모임 함께하실 분들 찾습니다."
        android:textIsSelectable="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동대문구 전농1동"
        android:fontFamily="@font/font_regular"
        android:textColor="@color/colorBlack"
        android:textAlignment="viewEnd"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack"
            android:text="2020-10-05 ~ 2020-12-30"
            android:textAlignment="viewEnd"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_tag2"
                android:id="@+id/tv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_tag"
                android:includeFontPadding="false"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="아동"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_tag3"
                android:id="@+id/tv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_tag"
                android:includeFontPadding="false"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="유치원"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tv_tag3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_tag"
                android:includeFontPadding="false"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="등하원도우미"
                android:textColor="#FFFFFF"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="15sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_limitSupply"
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:foregroundGravity="right"
            app:srcCompat="@drawable/ic_user_count" />

        <TextView
            android:id="@+id/tv_limitSupply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="0/2"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_limitDemand"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_user_count" />

        <TextView
            android:id="@+id/tv_limitDemand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="1/3"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/private_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_private_update"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_line_btn"
            app:layout_constraintRight_toLeftOf="@id/btn_private_delete"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/font_bold"
            android:includeFontPadding="false"
            android:text="수정하기"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666" />

        <Button
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_private_update"
            android:layout_width="0dp"

            android:id="@+id/btn_private_delete"
            android:layout_height="40dp"
            android:background="@drawable/delete_red_btn"
            android:fontFamily="@font/font_bold"
            android:textSize="16sp"
            android:includeFontPadding="false"

            android:textColor="@color/colorWhite"
            android:text="삭제하기"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>